<!DOCTYPE html>
<html>

<head>
  <title>Attendance</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w==" crossorigin="anonymous" />


  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap5.min.css">
  <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
  <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap5.min.js"></script>

</head>

<body>
  <div class="container-fluid bg-light p-0">
    <nav class="navbar navbar-expand-lg navbar-light container">
      <%=link_to "ORSHS Tutoring System", root_path, class: 'navbar-brand' %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <% if current_user and current_user.roles.tutor_role %>
          <li class="nav-item">
            <%= link_to 'My Courses', courses_index_path, class: 'nav-link'  %>
          </li>
          <li class="nav-item">
            <%=link_to "Tutoring Session", tutoring_session_index_path, class: 'nav-link' %>
          </li>
          <% end %>
        </ul>
        <ul class="navbar-nav ms-auto">
          <% if current_user %>
          <li class="nav-item">
            <%=link_to "Find a Tutor", '/tutor/index', class: 'nav-link', text: 'Tutor Matching'  %>
          </li>
          <li class="nav-item">
            <%=link_to "Join Tutoring Session", "/users/#{current_user.id}/schedule_student", class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'My Schedule', show_schedule_path, class: 'nav-link'  %>
          </li>
          <li class="nav-item">
            <%= link_to 'My Account', edit_user_registration_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign out', destroy_user_session_path, class: 'nav-link',
            method: :delete %>
          </li>
          <!-- TEMPORARY UNTIL EMAIL SET UP -->
          <% if current_user.roles.include?(Role.admin_role) %>
          <li class="nav-item">
            <%= link_to 'Get Tutoring Hours', '/users/admin_view_hours' , class: 'nav-link' %>
          </li>
          <% end %>
          <% else %>
          <li class="nav-item">
            <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link'%>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
          </li>
          <% end %>

        </ul>
        <ul class="navbar-nav">
          <% if current_user %>
          <li class="nav-item">
            <div>
              Signed in as <%= current_user.email%>
            </div>
          </li>
          <% end%>

        </ul>
      </div>
    </nav>
  </div>
  <div class="container">
    <div devise notices and allerts>
      <% if notice %>
      <div class="notice alert alert-success"><%= notice %></div>
      <% end %>
      <% if alert %>
      <div class="alert alert-warning"><%= alert %></div>
      <% end %>
    </div>
    <div class="notifications">
      <% @notifications.each do |noti| %>
      <div class="alert alert-warning">
        You have pending tutor requests. Check them <a href="<%= "/notifications/#{noti.id}/" %> ">here</a>.
      </div>
      <% end %>
    </div>
  </div>
  <%= yield %>
</body>

</html>
