<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4 mt-3">Create Tutoring Session</h1>
      <%= form_with(model: @tsession, url: tutoring_session_index_path) do |f| %>
        <% if @tsession.errors.full_messages.any? %>
        <div class="mb-5">
          <% @tsession.errors.full_messages.each do |error_message| %>
            <p class="text-danger"><%= error_message %></p>
          <% end %>
        </div>
        <% end %>
        <div class="mb-3">
          <%= f.label :scheduled_datetime %><br>
          <%= f.datetime_field  :scheduled_datetime, class: "form-control", required: true %>
        </div>
        <div class="mb-3">
          <%= f.label :completed_datetime %><br>
          <%= f.datetime_field  :completed_datetime, class: "form-control", required: true %>
        </div>
        <div class="mb-3">
          <div class="form-check">
            <%= check_box :repeat, :session, class: "form-check-input" %>
            <label class="form-check-label" for="repeat_session">
              Repeat schedule session for following weeks until the end of the semester
            </label>
          </div>
        </div>
        <div class="mb-3">
          <div class="field">
            <%= f.label :session_status %><br />
            <%= f.radio_button :session_status, "new", :checked => true  %>
            <%= f.label :session_status, "Allow Students to sign up for this session", :value => "new"  %> <br/>
            <%= f.radio_button :session_status, "In-Person" %>
            <%= f.label :session_status, "This event already occured in person", :value => "In Person" %>
          </div>
        </div>
        <%=link_to "Cancel", tutoring_session_index_path, class: 'btn btn-danger' %>
        <%= f.submit class: "btn btn-primary float-right" %>
      <% end %>
    </div>
  </div>
</div>
