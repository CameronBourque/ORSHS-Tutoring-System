<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4 mt-3">Edit Tutoring Session</h1>
      <%= form_with(model: @tsession) do |f| %>
        <div class="mb-3">
          <%= f.label :scheduled_datetime %><br>
          <%= f.datetime_field  :scheduled_datetime, class: "form-control", required: true %>
        </div>
        <%=link_to "Cancel", tutoring_session_path(@tsession), class: 'btn btn-danger' %>  
        <%= f.submit class: "btn btn-primary float-right" %>
      <% end %>
    </div>
  </div>
</div>